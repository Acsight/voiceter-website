{
    "family": "website-backend",
    "taskRoleArn": "arn:aws:iam::119764646179:role/website-ecs-task-role",
    "executionRoleArn": "arn:aws:iam::119764646179:role/website-ecs-task-execution-role",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "1024",
    "memory": "2048",
    "containerDefinitions": [
        {
            "name": "website-backend",
            "image": "119764646179.dkr.ecr.us-east-1.amazonaws.com/website-backend:latest",
            "cpu": 0,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {"name": "AWS_REGION", "value": "us-east-1"},
                {"name": "DYNAMODB_TABLE_PREFIX", "value": "website-demo-"},
                {"name": "PORT", "value": "8080"},
                {"name": "ENABLE_AUDIO_RECORDING", "value": "true"},
                {"name": "ENABLE_AUTH", "value": "false"},
                {"name": "S3_BUCKET_NAME", "value": "website-demo-recordings-119764646179"},
                {"name": "BEDROCK_MODEL_ID", "value": "amazon.nova-2-sonic-v1:0"},
                {"name": "LOG_LEVEL", "value": "INFO"},
                {"name": "SES_SENDER_EMAIL", "value": "no_reply@voiceter.ai"},
                {"name": "MARKETING_EMAILS", "value": "jeff@voiceter.ai,mehmet@voiceter.ai"}
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/website-backend",
                    "awslogs-create-group": "true",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": ["CMD-SHELL", "node -e \"require('http').get('http://localhost:8080/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})\""],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ]
}

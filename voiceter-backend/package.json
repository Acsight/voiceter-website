{
  "name": "voiceter-backend",
  "version": "1.0.0",
  "description": "Backend server for Voiceter AI voice survey demos",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/index.js",
    "dev": "ts-node src/server/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "load:concurrent": "artillery run load-tests/concurrent-sessions.yml",
    "load:audio": "artillery run load-tests/audio-streaming.yml",
    "load:tools": "artillery run load-tests/tool-execution.yml",
    "load:all": "npm run load:concurrent && npm run load:audio && npm run load:tools",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "voiceter",
    "voice",
    "survey",
    "ai",
    "bedrock",
    "websocket"
  ],
  "author": "Voiceter Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-agent": "^3.968.0",
    "@aws-sdk/client-bedrock-runtime": "^3.968.0",
    "@aws-sdk/client-cloudwatch": "^3.949.0",
    "@aws-sdk/client-dynamodb": "^3.948.0",
    "@aws-sdk/client-polly": "^3.948.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/client-ses": "^3.955.0",
    "@aws-sdk/client-transcribe-streaming": "^3.948.0",
    "@aws-sdk/util-dynamodb": "^3.948.0",
    "@smithy/node-http-handler": "^4.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "google-auth-library": "^10.5.0",
    "rxjs": "^7.8.1",
    "sentiment": "^5.0.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.19.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@types/sentiment": "^5.0.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "artillery": "^2.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fast-check": "^4.4.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}

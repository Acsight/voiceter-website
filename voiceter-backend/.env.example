# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1

# ============================================
# DynamoDB Configuration
# ============================================
DYNAMODB_TABLE_PREFIX=website-demo-
DYNAMODB_SESSIONS_TABLE=website-demo-sessions
DYNAMODB_RESPONSES_TABLE=website-demo-responses
DYNAMODB_TRANSCRIPTS_TABLE=website-demo-transcripts

# ============================================
# S3 Configuration
# ============================================
S3_BUCKET_NAME=website-demo-recordings-119764646179
S3_AUDIO_PREFIX=recordings/

# ============================================
# Server Configuration
# ============================================
PORT=8080
NODE_ENV=production
LOG_LEVEL=INFO

# ============================================
# Authentication (Optional)
# ============================================
ENABLE_AUTH=false
# COGNITO_USER_POOL_ID=your-cognito-user-pool-id

# ============================================
# Redis Configuration (Optional - for multi-instance)
# ============================================
# REDIS_URL=redis://your-redis-endpoint:6379
# REDIS_SESSION_TTL=1800

# ============================================
# Feature Flags
# ============================================
ENABLE_AUDIO_RECORDING=true
ENABLE_SENTIMENT_ANALYSIS=false
ENABLE_QUOTA_MANAGEMENT=false

# ============================================
# Gemini Live Configuration (Requirement 12.1-12.8)
# ============================================
# Enable Gemini Live API (set to true to use Gemini Live for voice conversations)
USE_GEMINI_LIVE=false

# Google Cloud Project ID (REQUIRED when USE_GEMINI_LIVE=true)
# GOOGLE_CLOUD_PROJECT=your-gcp-project-id

# Google Cloud Region for Vertex AI (REQUIRED when USE_GEMINI_LIVE=true)
# Common regions: us-central1, us-east1, us-west1, europe-west1
# GOOGLE_CLOUD_REGION=us-central1

# Gemini Live model name (default: gemini-live-2.5-flash-preview-native-audio)
# GEMINI_MODEL=gemini-live-2.5-flash-preview-native-audio

# Default voice for audio generation (default: Charon)
# Available voices: Aoede, Charon, Fenrir, Kore, Puck, Orbit
# GEMINI_DEFAULT_VOICE=Charon

# Voice mapping for legacy voice names (format: legacyName1:geminiVoice1,legacyName2:geminiVoice2)
# Default mappings: matthew:Charon, tiffany:Aoede, amy:Kore
# GEMINI_VOICE_MAPPING=matthew:Charon,tiffany:Aoede,amy:Kore

# Maximum reconnection attempts (default: 3, range: 0-10)
# GEMINI_RECONNECT_MAX_RETRIES=3

# Base delay for reconnection backoff in milliseconds (default: 1000, min: 100)
# GEMINI_RECONNECT_BASE_DELAY_MS=1000

# Tool execution timeout in milliseconds (default: 5000, min: 1000)
# GEMINI_TOOL_TIMEOUT_MS=5000

# ============================================
# Gemini Live VAD (Voice Activity Detection) Configuration
# ============================================
# Start of speech sensitivity (HIGH or LOW, default: HIGH)
# GEMINI_VAD_START_SENSITIVITY=HIGH

# End of speech sensitivity (HIGH or LOW, default: LOW)
# GEMINI_VAD_END_SENSITIVITY=LOW

# Prefix padding before speech detection in milliseconds (default: 0)
# GEMINI_VAD_PREFIX_PADDING_MS=0

# Silence duration to detect end of speech in milliseconds (default: 500, min: 100)
# GEMINI_VAD_SILENCE_DURATION_MS=500

# ============================================
# Rate Limiting
# ============================================
MAX_MESSAGES_PER_SECOND=100
MAX_AUDIO_CHUNK_SIZE_MB=1

# ============================================
# Timeouts
# ============================================
SESSION_TIMEOUT_MINUTES=30
CLEANUP_TIMEOUT_SECONDS=5
DISCONNECT_CLEANUP_TIMEOUT_SECONDS=3

# ============================================
# Monitoring
# ============================================
CLOUDWATCH_NAMESPACE=Voiceter/Backend
ENABLE_XRAY_TRACING=false

# ============================================
# NLP Analysis Configuration (Bedrock Prompt Management)
# ============================================
# NLP Analysis Prompt ARN (for open-ended response analysis)
# NLP_PROMPT_ARN=arn:aws:bedrock:us-east-1:119764646179:prompt/PEE5V0ZZQH
# NLP_PROMPT_VERSION=1

# Survey Output Prompt ARN (for extracting survey answers from transcripts)
# Used at session end to extract clean, structured survey responses
SURVEY_OUTPUT_PROMPT_ARN=arn:aws:bedrock:us-east-1:119764646179:prompt/MEXXGH0O6B
SURVEY_OUTPUT_PROMPT_VERSION=2

# Model ID for NLP/Survey extraction (fallback when Prompt Management fails)
# NLP_MODEL_ID=amazon.nova-lite-v1:0
# SURVEY_OUTPUT_MODEL_ID=amazon.nova-lite-v1:0

# ============================================
# Questionnaires
# ============================================
# QUESTIONNAIRES_DIR=./questionnaires

# ============================================
# CORS Configuration (update with your frontend domain)
# ============================================
CORS_ORIGIN=*
